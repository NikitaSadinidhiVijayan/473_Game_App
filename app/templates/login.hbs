
<h3>Register now to play!</h3>
<form>

    {{#if session.isAuthenticated}}
      <button class="btn btn-danger" {{action 'logout'}}>Log Out</button>

      {{else}}
    <div class="form-group">
      <label>Email</label>
      {{input type="email" class="form-control" value=email placeholder="me@example.com" required=true}}
    </div>
    <div class="form-group">
      <label>Password</label>
      {{input type="password" class="form-control" value=password placeholder="Password" required=true}}
    </div>
    <button {{action 'login'}} class="btn btn-primary">Log In</button>
    <button {{action 'signup'}} class="btn btn-primary">Sign Up</button>
    <button {{action 'github'}} class="btn btn-primary">Github login</button>
    {{/if}}
</form>

{{outlet}}
{{outlet}}
